{
  "name": "gem-viz",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "node scripts/inject-version.js && node scripts/generate-geojson.js && NODE_OPTIONS=--max-old-space-size=8192 vite build",
    "preview": "vite preview",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:vps": "bash scripts/deploy-vps.sh",
    "build:ssr": "bash scripts/build-ssr.sh",
    "start:ssr": "PORT=3000 node build-ssr/index.js",
    "release": "node scripts/release.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'src/**/*.{js,ts,svelte,css,html}'",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "check": "npm run lint && npm run format && npm run type-check",
    "geojson": "node scripts/generate-geojson.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.43.5",
    "svelte-check": "^4.3.4",
    "svelte-eslint-parser": "^1.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-minify": "^2.1.0"
  },
  "dependencies": {
    "@deck.gl/aggregation-layers": "^9.2.2",
    "@deck.gl/core": "^9.2.2",
    "@deck.gl/layers": "^9.2.2",
    "@duckdb/duckdb-wasm": "^1.30.0",
    "@luma.gl/core": "^9.2.4",
    "@luma.gl/webgl": "^9.2.4",
    "@motherduck/wasm-client": "^0.7.0",
    "d3": "^7.9.0",
    "d3-force-3d": "^3.0.6",
    "d3-geo": "^3.1.1",
    "d3-geo-projection": "^4.0.0",
    "dotenv": "^17.2.3",
    "duckdb": "^1.4.2",
    "maplibre-gl": "^5.12.0",
    "maplibre-gl-draw": "^1.6.9",
    "mermaid": "^11.12.2",
    "slugify": "^1.6.6",
    "topojson-client": "^3.1.0",
    "us-atlas": "^3.0.1",
    "zod": "^4.1.12"
  }
}
