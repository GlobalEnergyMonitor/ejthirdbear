# MotherDuck Configuration
# Get your token from: https://app.motherduck.com/ (Settings > Access Tokens)
MOTHERDUCK_TOKEN=your_token_here
MOTHERDUCK_DB=gem_data

# Public site URL for OG images and canonical URLs
PUBLIC_SITE_URL=

# Optional: DuckDB Geography Extension (experimental)
# Enables optional spatial indexing and geographic operations at build time
# All features are backward compatible and disabled by default
# Set to 'true' to enable, 'false' to disable each feature
ENABLE_GEOGRAPHY=false
GEOGRAPHY_S2_CELLS=true           # Pre-compute hierarchical S2 cell IDs (enabled by default if ENABLE_GEOGRAPHY=true)
GEOGRAPHY_GEOMETRIES=false         # Pre-compute WKB geometries for distance/containment queries
GEOGRAPHY_ENRICH=false            # Validate coordinates against authoritative geographic data
GEOGRAPHY_VERBOSE=false           # Log geography operations at build time
